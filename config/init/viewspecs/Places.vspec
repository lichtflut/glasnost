perspective "Places" {

	title : "Places overview"

	port {

		widget {
			title : "Countries"
			display : "list"
			selection {
				by-type : "http://rb.lichtflut.de/common#Country"
			}
		}

	}

	port {

		widget {
			title : "Cities"
			display : "list"
			action {
			    label : "Add a city"
			    create : "http://rb.lichtflut.de/common#City"
			}
			selection {
				query : "'http://www.w3.org/1999/02/22-rdf-syntax-ns#type'='http://rb.lichtflut.de/common#City'"
			}
		}

	}

}